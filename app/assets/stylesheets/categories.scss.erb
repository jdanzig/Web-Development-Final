div.flexslider {
  ul.slides {
    li {
      position: relative;
      .flex-caption {
        width: 100%;
        padding: 2%;
        left: 0;
        top: 0;
        background: rgba(0,0,0,.5);
        color: #fff;
        text-shadow: 0 -1px 0 rgba(0,0,0,.3);
        font-size: 24px;
        line-height: 18px;
        text-align: center;
        position: absolute;
      }
    }
  }
}