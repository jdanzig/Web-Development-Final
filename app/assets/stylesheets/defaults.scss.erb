body {
  background-image: url("<%= asset_path 'background.png' %>");
  background-repeat: both;
  background-opacity: 0.5;
}

div.pagination {
  display: block;
  clear: both;
  margin: 0 auto;
  text-align: center;
  ul.pagination {
    text-align: center;
  }
}

.tooltipsy {
  padding: 10px;
  max-width: 200px;
  color: #303030;
  background-color: #f5f5b5;
  border: 1px solid #deca7e;
}

div.favorite-icon {
  display: inline-block;
  margin-left: 10px;
}